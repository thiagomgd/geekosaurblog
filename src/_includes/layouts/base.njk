<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <!-- Inline and minify CSS - VS Code thinks this is invalid but it's fine -->
    {% set code_css %}
      {% include "_code.css" %}
    {% endset %}
    {% set css %}
      {% include "style.css" %}
    {% endset %}
    <style>
      {{ code_css | cssmin | safe }}
      {{ css | cssmin | safe }}
    </style>

    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    {%- set absolutePostUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset -%}
    {% if thumbnail %}
    {%- set thumbnailUrl %}{{ thumbnail | url | absoluteUrl(metadata.url) }}{% endset -%}
    {% endif %}

    {% metagen
        title=title or metadata.title,
        desc=desc or lead or metadata.desc,
        url=absolutePostUrl,
        img=thumbnailUrl,
        twitter_card_type="summary_large_image",
        twitter_handle="FalconSensei",
        name="Falcon | Geekosaur",
        generator="eleventy",
        comments=true
    %}

  </head>
  <body>
    <header>
      <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
        <li class="nav-item"><a href="/feed/feed.xml">RSS</a></li>
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    {% include 'footer.njk' %}

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
